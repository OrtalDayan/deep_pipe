from dpipe.dataset.wrappers import cache_methods, normalized, add_groups_from_ids, bbox_extraction, merge_datasets
from dpipe.split.cv_111 import group_cv_111_pure_011
from dpipe.dataset.brats import Brats2017

dataset = add_groups_from_ids(
    separator = "^",

    dataset = cache_methods(
        methods=["load_image" "load_segm" "load_msegm"],
        dataset = normalized(
            mean = True,
            std = True,
            drop_percentile = None,

            dataset = bbox_extraction(

                dataset = merge_datasets(

                    datasets = [
                        Brats2017(
                            data_path = data_path,
                            metadata_rpath = metadata_rpath
                        ),
                        Brats2017(
                            data_path = augmented_data_path,
                            metadata_rpath = augmented_metadata_rpath
                        )
                    ]
                )
            )
        )
    )
)

split = group_cv_111_pure_011(
    n_splits = 5,
    val_size = 6,
    dataset = dataset
)